<!DOCTYPE html>
<html lang="en">

<%-include('./partials/head', {titulo:"Listado", css:""}) %>  <!--*! falta agregar css -->
<%-include('./partials/header') %>

<body>
   
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/peliculas/create" method="POST">
            <label for="title">Titulo </label>
            <p><input type="text" name="title" id="" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" required> </p>
            <label for="genreID">Genero </label>
            <p>
                <select name="genre_id" id="" required>
                    <option value="" disabled selected>- select genre - </option>
                    <% allGeneros.forEach(genero => { %>
                    <option value="<%= genero.id %>"><%= genero.name %></option>
                    <% }); %>
                </select>
            </p>
            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/peliculas">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>